<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zero.dao.RoomTypeDao">
    <insert id="insertFloor">
        insert into floor
        values (#{name},#{remarks})
    </insert>

    <delete id="deleteFloor">
        delete from floor f
        where f.name=#{name}
    </delete>

    <update id="updateFloor">
        update floor f
        set f.remarks=#{remarks}
        where name=#{name}
    </update>

    <select id="selectFloor" resultType="com.zero.pojo.Floor">
        select *
        from floor f
        where f.name=#{name}
    </select>
</mapper>
